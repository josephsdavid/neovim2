notes to myself on other machines 


julia --project=@nvim-lspconfig -e 'import Pkg; Pkg.add("PackageCompiler"); Pkg.add("LanguageServer"); using PackageCompiler; 
create_sysimage(:LanguageServer, sysimage_path=dirname(Pkg.Types.Context().env.project_file) * "/languageserver.so")' 
julia --project=@nvim-lspconfig -e 'import Pkg; Pkg.add("JuliaFormatter")'
create_sysimage(:JuliaFormatter, sysimage_path=dirname(Pkg.Types.Context().env.project_file) * "/juliaformatter.so")' 
julia --project=@nvim-lspconfig -e 'import Pkg; Pkg.add("Revise")
create_sysimage(:Revise, sysimage_path=dirname(Pkg.Types.Context().env.project_file) * "/revise.so")
